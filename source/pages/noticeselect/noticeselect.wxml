<view class='padding-20 h5 txt-gray'>
  请点击选择一个栏目显示到聊天
</view>

<view class='white-block'>
  <view url='/pages/notice/notice?id={{item.id}}' class='border-top white-block padding-20 flex-row ' wx:for="{{noticelist}}" wx:key="k" bindtap='backToSend' id="{{item.id}}" wx:for-index='idx'>
    <view>
      <image class='cover box-shadow' src='{{uploadpath}}news/{{item.cover}}' mode="aspectFill"></image>
    </view>
    <view class='flex-1'>
      <view class='title'>{{item.name}}</view>
    </view>
  </view>
</view>

