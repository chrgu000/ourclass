<view>
  <swiper autoplay='true' indicator-dots='true' style='width:750rpx;height:200rpx;' circular>
    <swiper-item wx:for="{{indexbanner}}" wx:key="k">
      <view>
        <image src='{{uploadpath}}indexbanner/{{item.img}}' style='width:750rpx;height:200rpx;' mode="aspectFill"></image>
      </view>
    </swiper-item>
  </swiper>
</view>

<view class='white-block'>
  <navigator url='/pages/notice/notice?id={{item.id}}' class='border-top white-block padding-20 flex-row ' wx:for="{{noticelist}}" wx:key="k" wx:for-index='idx'>
    <view>
      <image class='cover box-shadow' src='{{uploadpath}}news/{{item.cover}}' mode="aspectFill"></image>
    </view>
    <view class='flex-1'>
      <view class='title'>{{item.name}}</view>
      <view class='margin-top flex-row flex-bottom'>
        <view class='flex-1 h6 txt-gray'>{{item.published_date_formatting}}</view>
        <view class='h6 txt-gray'>{{item.readcount}}阅读</view>
      </view>
    </view>
  </navigator>
</view>


<view style='height:150rpx;'></view>
<view class='fixedbottom'>
<navigator url='/pages/noticecreate/noticecreate' class='padding'>
  <button type='primary' class='round-button' >创建文章</button>
</navigator>
</view>